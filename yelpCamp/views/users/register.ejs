<% layout('layouts/boilerplate')%>
<%- include('../partials/flash') %> <!-- relative path -->
<div class="container d-flex justify-content-center align-items-center">
	<div class="row">
		<div class="col-xl-4 offset-xl-4 col-md-6 offset-md-3">
			<div class="card shadow">
				<img src="https://images.unsplash.com/photo-1571687949921-1306bfb24b72?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1234&q=80" alt="" class="card-img top img-thumbnail">
				<div class="card-body">
					<h1 class="card-title">Register</h1>
					<form action="/register" novalidate class="needs-validation" method="POST">
						<div class="mb-3">
							<label class="form-label" for="username">Username:</label>
							<input class="form-control" type="text" id="username" name="username" required autofocus>
							<div class="valid-feedback">
								Looks Good!
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="email">Email:</label>
							<input class="form-control" type="email" id="email" name="email" required>
							<div class="valid-feedback">
								Looks Good!
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password:</label>
							<input class="form-control" type="password" id="password" name="password" required>
							<div class="valid-feedback">
								Looks Good!
							</div>
						</div>
						<button class="btn btn-success w-100">Register</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
