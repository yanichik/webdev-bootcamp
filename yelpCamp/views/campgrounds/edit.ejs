<!-- don't need path relative to this file because the layout acts relative to the views folder, 
	 which is the default for 'ejs' -->
<% layout('layouts/boilerplate') %>
	<div class="row">
		<h1 class="text-center">Edit Campground</h1>
		<div class="col-6  offset-3">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
				<div class="mb-3">
					<label class="form-label" for="title">Campground Name:</label>
					<input class="form-control" type="text" id="title" name="title" value="<%= campground.title %>" required>
					<div class="valid-feedback">
						Great!
					</div>
					<div class="invalid-feedback">
						Enter Name
					</div>
				</div>
				<!-- <div class="mb-3" style="border-color: blue; border-style: solid;"> -->
				<div class="mb-3">
					<label class="form-label" for="location">Campground Location:</label>
					<input class="form-control" type="text" id="location" name="location" value="<%= campground.location %>" required>
					<div class="valid-feedback">
						Great!
					</div>
					<div class="invalid-feedback">
						Enter Location
					</div>
				</div>
				<div class="mb-3">
					<label class="form-label" for="description">Campground Description:</label>
					<textarea class="form-control" type="text" id="description" name="description" required><%= campground.description %></textarea>
					<div class="valid-feedback">
						Great!
					</div>
					<div class="invalid-feedback">
						Enter Description
					</div>
				</div>
				<div class="mb-3">
					<label class="form-label" for="price">Campground Price:</label>
					<div class="input-group mb-3">
						<span class="input-group-text" id="price-label">$</span>
						<input class="form-control" type="text" id="price" name="price" aria-label="price" value="<%= campground.price %>" required>
						<div class="valid-feedback">
							Great!
						</div>
					<div class="invalid-feedback">
						Need a Price
					</div>
					</div>
				</div>
				<div class="mb-3">
					<label class="form-label" for="image">Image URL:</label>
					<input class="form-control" type="text" id="image" name="image" value="<%= campground.image %>" required>
					<div class="valid-feedback">
						Great!
					</div>
					<div class="invalid-feedback">
						Missing URL
					</div>
				</div>
				<button class="btn btn-primary">Update</button>
				<a class="btn btn-danger" href="/campgrounds/<%= campground._id %>">Cancel Edit</a>
			</form>
		</div>
	</div>

	<script type="text/javascript">
		<%- include('../../utils/formValidation.js') %>
	</script>




